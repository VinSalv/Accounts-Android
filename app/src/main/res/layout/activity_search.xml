<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchActivityLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <EditText
        android:id="@+id/nameSerched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/rounded_color"
        android:ems="10"
        android:hint="@string/nameHint"
        android:inputType="textPersonName"
        android:textColor="@color/rightText"
        android:textColorHighlight="@color/textSelection"
        android:theme="@style/inputField"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/elemFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingEnd="10dp"
        android:text="Numero account trovati: 0"
        android:textAlignment="viewEnd"
        android:textColor="@color/rightText"
        android:textSize="16sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <include
        layout="@layout/content_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>